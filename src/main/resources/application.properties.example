# ====================================
# Lavis - Gemini Hackathon Edition
# ====================================
#
# This is a simplified configuration for the Gemini Hackathon.
# All models use Gemini API with a single API key.
#
# Usage Instructions:
# 1. Copy this file to application.properties
# 2. Set your Gemini API key (or configure via frontend Settings panel)
# 3. application.properties is in .gitignore and will not be committed
#
# ====================================

spring.application.name=lavis

# Server
server.port=18765

# ====================================
# Model Configuration
# ====================================
# Default model aliases
app.llm.default-model=gemini
app.llm.default-stt-model=whisper
app.llm.default-tts-model=tts

# ====================================
# Chat Model - Gemini
# ====================================
# Using Google Gemini API directly
# API Key can be set via:
# 1. Environment variable: GEMINI_API_KEY
# 2. Frontend Settings panel (recommended for hackathon)
# 3. Directly in this file (not recommended)
app.llm.models.gemini.provider=GEMINI
app.llm.models.gemini.api-key=${GEMINI_API_KEY:}
app.llm.models.gemini.model-name=gemini-2.5-flash-preview
app.llm.models.gemini.temperature=0.4
app.llm.models.gemini.timeout-seconds=180
app.llm.models.gemini.max-retries=3

# ====================================
# STT (Speech-to-Text) - Gemini
# ====================================
# Using Gemini generateContent API with audio input
app.llm.models.whisper.type=STT
app.llm.models.whisper.provider=GEMINI
app.llm.models.whisper.api-key=${GEMINI_API_KEY:}
app.llm.models.whisper.model-name=gemini-2.5-flash-preview
app.llm.models.whisper.timeout-seconds=120

# ====================================
# TTS (Text-to-Speech) - Gemini
# ====================================
# Using Gemini TTS API (streamGenerateContent with responseModalities: ["AUDIO"])
# Available voices: Kore, Charon, Fenrir, Aoede, Puck, etc.
# See: https://ai.google.dev/gemini-api/docs/text-to-speech
app.llm.models.tts.type=TTS
app.llm.models.tts.provider=GEMINI
app.llm.models.tts.api-key=${GEMINI_API_KEY:}
app.llm.models.tts.model-name=gemini-2.5-flash-preview-tts
app.llm.models.tts.voice=Kore
app.llm.models.tts.timeout-seconds=60

# ====================================
# Agent Configuration
# ====================================
agent.model.alias=gemini
agent.retry.max=3
agent.retry.delay.ms=2000
agent.max.tool.iterations=30
agent.tool.wait.ms=200

# ====================================
# Reflection Configuration
# ====================================
reflection.max.iterations=5
reflection.delay.ms=1000

# ====================================
# Executor Configuration
# ====================================
executor.max.corrections=5
executor.action.timeout.seconds=30
executor.tool.wait.ms=200

# ====================================
# Screenshot Configuration
# ====================================
screenshot.target.width=1280
screenshot.quality=1.0

# ====================================
# Logging
# ====================================
logging.level.com.lavis=INFO
logging.level.dev.langchain4j=WARN
logging.pattern.console=%d{HH:mm:ss} %clr(%-5level) %cyan(%logger{20}) - %msg%n

# ====================================
# JavaFX
# ====================================
spring.main.allow-bean-definition-overriding=true

# ====================================
# Gemini Computer Use Configuration
# ====================================
gemini.computer.use.model=gemini-2.5-computer-use-preview-10-2025
gemini.computer.use.max.iterations=30
gemini.computer.use.max.screenshots=3
computer.use.default.browser=Google Chrome
computer.use.action.delay.ms=300
