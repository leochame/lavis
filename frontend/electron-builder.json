{
  "appId": "com.lavis.desktop",
  "productName": "Lavis",
  "copyright": "Copyright Â© 2025 Lavis",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "extraResources": [
    {
      "from": "../target/lavis.jar",
      "to": "backend/lavis.jar"
    },
    {
      "from": "jre/${os}-${arch}",
      "to": "jre",
      "filter": ["**/*"]
    }
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "build/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      }
    ],
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "extendInfo": {
      "NSMicrophoneUsageDescription": "Lavis needs microphone access for voice wake-up and voice interaction features",
      "NSAppleEventsUsageDescription": "Lavis needs this permission to provide a better user experience"
    }
  },
  "dmg": {
    "title": "Lavis",
    "icon": "build/icon.icns",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "icon": "build/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Lavis AI",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "license": "build/license.txt"
  },
  "linux": {
    "icon": "build/icon.png",
    "category": "Utility",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "desktop": {
      "Name": "Lavis AI",
      "Comment": "Your Local AI Assistant",
      "Categories": "Utility;Application;"
    }
  },
  "appImage": {
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "publish": null,
  "npmRebuild": false,
  "asar": true,
  "asarUnpack": [
    "**/node_modules/**",
    "**/*.ppn",
    "**/*.pv"
  ],
  "compression": "maximum"
}
